%table.columns
  %thead
    %tr
      %th
      - query_generator_session.query.used_columns.each do |qc|
        %th.center
          %span.column-header
            = human_model_name(qc.model)
            %br
            = qc.column_name
  %tbody
    = render_wizard_partial 4, "rows/positions"
    = render_wizard_partial 4, "rows/show"
    = render_wizard_partial 4, "rows/name"
    = render_wizard_partial 4, "rows/order"
    = render_wizard_partial 4, "rows/group_by"
    = render_wizard_partial 4, "rows/conditions"

    - if query_generator_session.generated_query.output_columns.any?
      = render_wizard_partial 4, "rows/preview"